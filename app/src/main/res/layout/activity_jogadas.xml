        android:text="Defesa"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/ataqueButton"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_marginHorizontal="445dp"
        android:layout_marginVertical="167dp"
        android:background="@drawable/button_pressed"
        android:text="Ataque"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/remateButton"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_marginHorizontal="445dp"
        android:layout_marginVertical="287dp"
        android:background="@drawable/button_pressed"
