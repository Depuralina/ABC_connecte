        android:textColor="@color/black"
        android:textSize="20sp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/balizaButton"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_marginHorizontal="445dp"
        android:layout_marginVertical="404dp"
        android:background="@drawable/button_pressed"
        android:text="Baliza\Realizada"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/falhadoButton"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_marginHorizontal="696dp"
        android:layout_marginVertical="404dp"
        android:background="@drawable/button_pressed"
        android:text="Falhado\Sofrida"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/faltaButton"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_marginHorizontal="696dp"
        android:layout_marginVertical="287dp"
        android:background="@drawable/button_pressed"
        android:text="Falta"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="150dp"
        android:layout_marginVertical="85dp"
        android:text="Jogo"
        android:textColor="@color/black"
        android:textSize="42dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="625dp"
        android:layout_marginVertical="199dp"
        android:text="ou" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
