<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CriarAtleta"
    android:background="@drawable/background_tablet">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="75dp"
        android:text="    Criar \nTreinador"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signUpErrorView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:background="@drawable/bg_edittext"
        android:hint="Nome"
        android:inputType="textEmailAddress"
        android:layout_marginTop="680dp" />

    <EditText
        android:id="@+id/numero"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:background="@drawable/bg_edittext"
        android:hint="Numero"
        android:inputType="textEmailAddress"
        android:layout_marginTop="590dp" />

    <EditText
        android:id="@+id/idade"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:background="@drawable/bg_edittext"
        android:hint="Idade"
        android:inputType="textEmailAddress"
        android:layout_marginTop="500dp" />

    <EditText
        android:id="@+id/genero"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:background="@drawable/bg_edittext"
        android:hint="Genero"
        android:inputType="textEmailAddress"
        android:layout_marginTop="410dp" />

    <EditText
        android:id="@+id/pos"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:background="@drawable/bg_edittext"
        android:hint="posição"
        android:inputType="textEmailAddress"
        android:layout_marginTop="320dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:background="@drawable/bg_edittext"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="230dp"/>

    <EditText
        android:id="@+id/mail"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:background="@drawable/bg_edittext"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="140dp" />

    <EditText
        android:id="@+id/user"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:background="@drawable/bg_edittext"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/criar"
        android:layout_width="167dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="1050dp"
        android:layout_marginVertical="675dp"
        android:background="@drawable/button"
        android:text="criar"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@null" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginHorizontal="1000dp"
        android:layout_marginVertical="15dp"
        app:srcCompat="@drawable/img" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="240dp"
        android:layout_height="400dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="250dp"
        app:srcCompat="@drawable/treinador" />

</RelativeLayout>