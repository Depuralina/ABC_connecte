<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarAtleta"
    android:background="@drawable/background_tablet">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="75dp"
        android:text=" Editar \n Atleta"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/numero"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/bg_edittext"
        android:hint="Numero"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/idade"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/bg_edittext"
        android:hint="Idade"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/genero"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/bg_edittext"
        android:hint="Genero"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/pos"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/bg_edittext"
        android:hint="posição"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/escalao220"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:layout_marginTop="600dp"
        android:autofillHints=""
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="Escalão"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/user"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_edittext"
        android:hint="Username"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/criar"
        android:layout_width="167dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="1050dp"
        android:layout_marginVertical="590dp"
        android:background="@drawable/button"
        android:text="Update"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@null" />


    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="278dp"
        android:layout_height="420dp"
        android:layout_marginHorizontal="25dp"
        app:srcCompat="@drawable/atleta"
        tools:layout_marginTop="400dp" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginHorizontal="1000dp"
        android:layout_marginVertical="15dp"
        app:srcCompat="@drawable/img" />
</RelativeLayout>