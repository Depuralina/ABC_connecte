<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_criar_equipa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abc_connected.Criar_Equipa"
    android:background="@drawable/background_tablet">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="155dp"
        android:layout_marginVertical="65dp"
        android:text="Editar Alertas"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="227dp"
        android:layout_height="227dp"
        android:layout_marginHorizontal="1020dp"
        android:layout_marginVertical="20dp"
        app:srcCompat="@drawable/img" />

    <ListView

        android:id="@+id/window_list666"
        android:layout_width="1000dp"
        android:layout_height="650dp"
        android:layout_marginVertical="170dp"
        android:background="@drawable/bg_edittext"
        android:choiceMode="singleChoice" />

    <Button
        android:id="@+id/button_guardar545"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginHorizontal="1065dp"
        android:layout_marginVertical="600dp"
        android:background="@drawable/button"
        android:text="Apagar"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@null" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="1000dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>