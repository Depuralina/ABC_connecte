<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Criar_Alerta"
    android:background="@drawable/background_tablet">



    <EditText
        android:id="@+id/alr"
        android:layout_width="10000dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="300dp"
        android:autofillHints=""
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="Alerta"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginTop="370dp"
        tools:targetApi="o" />


    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginHorizontal="1000dp"
        android:layout_marginVertical="15dp"
        app:srcCompat="@drawable/img" />


    <Button
        android:id="@+id/criar33"
        android:layout_width="167dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="1050dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/button"
        android:text="Criar Alerta"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="75dp"
        android:text=" Criar \nAlerta"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />


</RelativeLayout>